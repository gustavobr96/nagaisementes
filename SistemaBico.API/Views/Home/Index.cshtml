                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <ol class="carousel-indicators">
                        <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
                        <li data-target="#customCarousel1" data-slide-to="1"></li>
                    </ol>
                </div>
            </div>
        </section>
        <!-- end slider section -->
    </div>


    <!-- food section -->
    <br />
    <br />
    <br />
    <br />
    <section class="food_section layout_padding-bottom">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Nossos Produtos
                </h2>
            </div>
            @if(Model.Menus.Count > 0){
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu de Sementes
                    </button>
                    <div class="dropdown-menu sementes-menu" aria-labelledby="categoryDropdown">
                        <a class="dropdown-item" href="#" onclick="filterMenu(event, 'all')">Todas</a>
                        @foreach(var menu in Model.Menus)
                        {
                            <a class="dropdown-item" href="#" onclick="filterMenu(event, '@menu.Id')">@menu.Nome</a>
                        }
                     
                    </div>
                </div>
            }
            <div class="filters-content mb-3">
                <div class="row grid">
                    @foreach (var item in Model.Produtos)
                    {
                        <div class="col-sm-6 col-lg-4 all menu-item @item.MenuId">
                            <div class="box">
                                <div class="img-box">
                                    <img src="data:image/png;base64,@item.FotoBase64" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.Nome
                                    </h5>
                                    <div class="d-flex justify-content-between small-font">
                                        <p>
                                            Pureza: <b>@item.Pureza%</b>
                                        </p>
                                        <p>
                                            Tetrazolio: <b>@item.Tetrazolio%</b>
                                        </p>
                                        <p>
                                            Lote: <b>@item.Lote</b>
                                        </p>
                                    </div>
                                    <p>
                                        @item.Observacao
                                    </p>
                                    <div style="text-align: center; margin-top: 10px;">
                                        <a href="#" class="btn-contato">Realizar Orçamento</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>

