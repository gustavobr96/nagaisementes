@model SistemaBico.API.Dtos.ResponseRazor.ListResponseRazor;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("pt-BR");
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div id="kt_app_content_container" class="app-container container-xxl">
    <div class="card card-flush">
        <div class="card-body pt-0">
            <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <input type="text" data-kt-ecommerce-product-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Pesquisar" />
                    </div>
                    <!--end::Search-->
                </div>
                <!--end::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                    <!--begin::Add product-->
                    <a asp-area="" asp-controller="Produtos" asp-action="novo-produto" class="btn btn-primary">Adicionar Produto</a>
                    <!--end::Add product-->
                </div>
                <!--end::Card toolbar-->
            </div>
            <div class="card mb-6">
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_products_table">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th class="w-10px pe-2">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                    <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_ecommerce_products_table .form-check-input" hidden value="1" />
                                </div>
                            </th>
                            <th class="min-w-200px">Produto</th>
                            <th class="text-end min-w-100px">Tipo</th>
                            <th class="text-end min-w-70px">Qtd</th>
                            <th class="text-end min-w-100px">Pureza</th>
                            <th class="text-end min-w-100px">Tetrazólio</th>
                            <th class="text-end min-w-100px">Fornecedor</th>
                            <th class="text-end min-w-100px">Observação</th>
                            <th class="text-end min-w-100px">Data</th>
                            <th class="text-end min-w-70px">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-gray-600">
                        @foreach(var item in Model.Produtos)
                        {
                            <tr>
                                <td>
                                    <div class="form-check form-check-sm form-check-custom form-check-solid">
                                        <input class="form-check-input" type="checkbox" value="1" hidden />
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <!--begin::Thumbnail-->
                                        <a href="apps/ecommerce/catalog/edit-product.html" class="symbol symbol-50px">
                                            <span class="symbol-label" style=""> <img class="symbol-label" src="data:image/jpg;base64,@item.FotoBase64" alt="image" /></span>
                                        </a>
                                        <!--end::Thumbnail-->
                                        <div class="ms-5">
                                            <!--begin::Title-->
                                            <a href="apps/ecommerce/catalog/edit-product.html" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">@item.Nome</a>
                                            <!--end::Title-->
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end pe-0" style="align-items:center">@item.TipoProduto</td>
                                <td class="text-end pe-0" style="align-items:center">@item.Quantidade</td>
                                <td class="text-end pe-0" style="align-items:center">@item.Pureza</td>
                                <td class="text-end pe-0" style="align-items:center">@item.Tetrazolio</td>
                                <td class="text-end pe-0" style="align-items:center">@item.FornecedorName</td>
                                <td class="text-end pe-0" style="align-items:center">@item.Observacao</td>
                                <td class="text-end pe-0" style="align-items:center">@item.DataCadastro</td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        Ações
                                        <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                    </a>
                                    <!--begin::Menu-->
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a href="apps/ecommerce/catalog/edit-product.html" class="menu-link px-3">Editar</a>
                                        </div>
                                        <!--end::Menu item-->
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a href="#" class="menu-link px-3" data-kt-ecommerce-product-filter="delete_row">Delete</a>
                                        </div>
                                        <!--end::Menu item-->
                                    </div>
                                    <!--end::Menu-->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>